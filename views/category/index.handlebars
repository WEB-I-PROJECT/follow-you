<div class="container">
    <div class="title mt-2" style="color: var(--purple-system);">
        <h1>Categorias</h1>
    </div>

    <button type="button" class="btn btn-primary mt-1" style="background-color: var(--purple-system);" data-bs-toggle="modal" data-bs-target="#ModalCategory">
        Adicionar Categoria
    </button>

    <div class="modal fade" id="ModalCategory" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" style="color: var(--purple-system);" id="ModalLabel">Adicionar uma categoria</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="background-color: var(--gray-system);">
                    <form action="/categoria/create" method="post">
                        <div class="modal-category">
                            <div class="mb-3">
                                <label for="exampleInputEmail1">Nome da Categoria</label>
                                <input type="text" name="name" class="form-control" id="" aria-describedby=""
                                    placeholder="Digite">
                            </div>
                            <div class="mb-3">
                                <label for="">Adicionar username de perfil</label>
                                <div class="d-flex gap-2">
                                    <input type="text" class="form-control" name="profile[]" placeholder="username..">
                                </div> 
                            </div>
                        </div>    
                        <div class="my-4">
                            <button onclick="add_profile(event)" id="newRoom" class="me-4 btn btn-success text-light fs-6 d-flex justify-content-around align-self-center">
                            <i class="fa fa-plus-circle me-1 mt-1" aria-hidden="true"></i> <span>Novo perfil</span> </button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn" style="background-color: var(--purple-system); color: white;">Adicionar</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
    <div class="d-flex content-category mt-3">
        <div class="table-content w-100 table-responsive">
            <table class="table" border="1">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>Nome</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <td>{{this.id}}</td>
                        <td>{{this.name}}</td>
                        <td class="text-center">
                            <i onclick="actionDetails(event)" class="bi bi-three-dots" style="color: rgb(0, 0, 0); cursor: pointer;"></i>
 
                        </td>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class='card-details text-center p-3 slideInRight'>
            <div class="title-card">
                <h5>Categoria</h5>
                <h3>Desenvolvimento web</h3>
            </div>
            <div class="actions">
                <button class="btn btn-warning"  onclick="actionDetails(event)"><i class="bi bi-pencil-fill" style="color: white;"></i></button>
                <a href="/categoria/delete/{{this.id}}"><button class="btn btn-danger"><i class="bi bi-x-lg"></i></button></a>
            </div>
            <div class="subtitle-card my-3">
                <h3>Perfis</h3>
            </div> 
            <div class="d-flex gap-1 content-profile">
                <div class="profile">
                    <div class="photo p-2">
                        <img src="/img/Wallas.jpg" alt="">
                    </div>
                    <div class="name">
                        <h6 for=""><b>Nome</b></h6>
                        <h6>Wallas Almeida</h6>
                    </div>
                    <div class="username">
                        <h6 for=""><b>username</b></h6>
                        <h6>wallas_dev</h6>
                    </div>
                </div>
                <div class="profile">
                    <div class="photo p-2">
                        <img src="/img/Wallas.jpg" alt="">
                    </div>
                    <div class="name">
                        <h6 for=""><b>Nome</b></h6>
                        <h6>Wallas Almeida</h6>
                    </div>
                    <div class="username">
                        <h6 for=""><b>username</b></h6>
                        <h6>wallas_dev</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</div>

<script src="/category/category.js"></script>