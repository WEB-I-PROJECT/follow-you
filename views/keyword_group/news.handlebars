<div id="news-backend" class="row fs-3">
    {{#each news}}
    <div class="new-content my-2">
        <div class="d-flex news w-100 gap-2">
            {{#if img}}
            <div class="img">
                <img class="rounded-3" style="width: 230px; height: 130px;" src="{{img}}" alt="">
            </div>
            {{else }}
            <div class="img">
                <img class="rounded-3" style="width: 230px; height: 130px;" src="/img/not-found-img.png" alt="">
            </div>
            {{/if}}
            <div class="d-flex text-start flex-column justify-content-between content w-100">
                <div class="title">
                    <h6><b>{{@root.type}}: </b>{{title}}</h6>
                </div>
                <div class="d-flex justify-content-between align-items-end">
                    <div class="link"><a href="{{url}}" target="_blank"><button class="btn btn-secondary"
                                style="font-size: 11px;">ver mais...</button></a></div>
                    <div class="date fs-6 text-black-50"><span>{{date}}</span></div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>