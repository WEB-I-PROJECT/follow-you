              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "error creating user"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/user/edit-user": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para editar usuário.",
        "parameters": [
          {
            "name": "id",
            "description": "ID do usuário.",
            "in": "query",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                "address": {
                  "example": "any"
                },
                "cpf": {
                  "example": "any"
                },
                "phone": {
                  "example": "any"
                },
                "password": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "string",
                  "example": "User editing successfully!"
                }
              },
              "xml": {
                "name": "main"
              }
            },
            "description": "Usuário atualizado com sucesso."
          },
          "400": {
            "description": "Usuario nao encontrado.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
