{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "HUB NEWS",
    "description": "Documentação da API."
  },
  "host": "localhost:8001",
  "basePath": "/",
  "tags": [
    {
      "name": "Analytic",
      "description": "Endpoints"
    },
    {
      "name": "Users",
      "description": "Endpoints"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    },
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://petstore.swagger.io/oauth/authorize",
      "flow": "implicit",
      "scopes": {
        "read_pets": "read your pets",
        "write_pets": "modify pets in your account"
      }
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/analytic/by-keywords/word/{id}": {
      "get": {
        "tags": [
          "Analytic"
        ],
        "description": "Endpoint para obter um frequência de palavras de uma analytic.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID da analytic."
          }
        ],
        "responses": {
          "200": {
            "description": "Frequências de palavras.",
            "schema": {
              "$ref": "#/definitions/WordsFrequency"
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/analytic/by-keywords/word/chart": {
      "get": {
        "tags": [
          "Analytic"
        ],
        "description": "Endpoint para obter um frequência de palavras em gráfico por grupo de palavras.",
        "parameters": [
          {
            "name": "id",
            "description": "ID do grupo de palavras.",
            "in": "query",
            "type": "string"
          },
          {
            "name": "origin",
            "description": "Origem das notícias.",
            "in": "query",
            "type": "string"
          },
          {
            "name": "keyword",
            "description": "Palavra-chave para do grupo de palavras.",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Frequências de palavras formatadas para gráfico.",
            "schema": {
              "$ref": "#/definitions/WordsCharts"
            }
          },
          "404": {
            "description": "Não encontrado.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "KeywordGroup not found!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/analytic/by-keywords/news/{type}/{id}": {
      "get": {
        "tags": [
          "Analytic"
        ],
        "description": "Endpoint para obter as noticías de determinado jornal.",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Jornal de origem das notícias."
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID da analytic."
          }
        ],
        "responses": {
          "200": {
            "description": "Notícias do jornal específicado.",
            "schema": {
              "$ref": "#/definitions/NewsKeyword"
            }
          },
          "404": {
            "description": "Não encontrado.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "News not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/analytic/{id}": {
      "delete": {
        "tags": [
          "Analytic"
        ],
        "description": "Endpoint para deletar uma analytic.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID da analytic."
          }
        ],
        "responses": {
          "200": {
            "description": "Mensagem de sucesso ao deletar.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "string",
                  "example": "Analytic deleted with success"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Não encontrado.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Analytic not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/user/list-users": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para obter todos os usuarios.",
        "responses": {
          "200": {
            "description": "Lista de usuários.",
            "schema": {
              "$ref": "#/definitions/UserList"
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "There was an error listing users"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/user/disable-user/{userId}": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para desativar usuário.",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "id",
            "description": "ID do usuário.",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário desativado com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "string",
                  "example": "User deactivated successfully!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "User not found"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "There was an error deactivating user"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/user/activate-user/{userId}": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para ativar usuário.",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário ativado com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "string",
                  "example": "User activate successfully!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "string",
                  "example": "User not found!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "There was an error activating user"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/api/user/add-user": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para criar usuário.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "password": {
                  "example": "any"
                },
                "name": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                "address": {
                  "example": "any"
                },
                "cpf": {
                  "example": "any"
                },
                "phone": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "string",
                  "example": "User created successfully!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Já existe uma conta com esse e-mail.",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "error creating user!"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
