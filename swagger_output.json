              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "WordsFrequency": {
      "type": "object",
      "properties": {
        "mostFrequentWordsInContent": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "word": {
                "type": "string",
                "example": "ensino"
              },
              "frequency": {
                "type": "number",
                "example": 732
              }
            }
          }
        }
      }
    },
    "WordsCharts": {
      "type": "object",
      "properties": {
        "labels": {
          "type": "array",
          "example": [
            "3-3-2021",
            "9-11-2021",
            "7-2-2022"
          ],
          "items": {
            "type": "string"
          }
        },
        "data": {
          "type": "array",
          "example": [
            1,
            1,
            1
          ],
          "items": {
            "type": "number"
          }
        }
      }
    },
    "NewsKeyword": {
      "type": "object",
      "properties": {
        "news": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "date": {
                "type": "string",
                "example": " 23/09/2022 às 08:42 "
              },
              "img": {
                "type": "string",
                "example": "https://www.cnnbrasil.com.br/wp-content/uploads/sites/12/2022/05/Copia-de-16x9-Podcast-WW.png?w=347"
              },
              "title": {
                "type": "string",
                "example": "As pesquisas eleitorais são confiáveis?"
              },
              "url": {
                "type": "string",
                "example": "https://www.cnnbrasil.com.br/politica/as-pesquisas-eleitorais-sao-confiaveis/"
              }
            }
          }
        }
      }
    },
    "UserList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "65b193785cbb532f21341011"
          },
          "name": {
            "type": "string",
            "example": "John Galdino"
          },
          "email": {
            "type": "string",
            "example": "john@gmail.com"
          },
          "address": {
            "type": "string",
            "example": "Guanambi - Caetite - IF"
          },
          "cpf": {
            "type": "string",
            "example": "908.978.666-44"
          },
          "phone": {
            "type": "string",
            "example": "(77) 66655-4444"
          },
          "password": {
            "type": "string",
            "example": "$2a$10$bPkZZJA6vAmVE9Y1pRkrx.0HvB6WgMXAQFZ.fGBCLHl.x7dqldRLO"
          },
          "isAdmin": {
            "type": "boolean",
            "example": true
          },
          "approved": {
            "type": "boolean",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "example": "2024-01-24T22:47:20.691Z"
          },
          "updatedAt": {
            "type": "string",
            "example": "2024-02-14T20:05:12.420Z"
          },
          "__v": {
            "type": "number",
            "example": 0
          },
          "profilePicture": {
            "type": "string",
            "example": "/uploads/Untitled.png"
          }
        }
      }
    }
  }
